<div class="background-wrap">
    <div id="background"></div>
    <div id="midground"></div>
    <div id="foreground"></div>
</div>
<!-- content start -->
{{{image "tolles Bild" "bg/bg_stars.jpg" "600,300,100"}}}
<!-- main Menu -->
{{> mainMenu}}
<!-- main Menu end -->
<section id="start" class="wow fadeInDown" style="background:none; padding-top:120px; margin-bottom:0">

	<div class="row">
		<div class="small-12 columns" >
			<img src="img/wisp-logo.png">
		</div>
	</div>

    <!--Google Plus News-->
    <div class="gplus"></div>
    <!--Google Plus end-->
</section>

<!--about-->
<section id="about" class="wow fadeInDown">
    <div class="row">
        <div class="small-12 columns" >
			{{> aboutUs}}
        </div>
    </div>
</section>
<!--about end-->

<!--Member Section-->
<section id="members" class="wow fadeInUp" style="position: relative;z-index:3;">
	{{> members}}
</section>
<!--Member Section end-->

<!--wispcast-->
<section id="wispcast" class="wow fadeInUp">
	{{> wispcast}}
</section>
<!--wispcast end-->

<section id="contact">
	<div class="row">
		<div class="small-12 medium-8 columns">
            <h2>Contact</h2>
            <form class="contact-form" data-abide="ajax" action="{{contact.mailformAdress}}" method="post">
               <input type="hidden" name="id" value=main_contact"/>
                <div class="name-field">
                    <label>Your name <small>required</small>
                        <input type="text" name="name" required pattern="[a-zA-Z]+">
                    </label>
                    <small class="error">Please tell us your Name :-)</small>
                </div>
                <div class="email-field">
                    <label>Email <small>required</small>
                        <input type="email" name="email" required>
                    </label>
                    <small class="error">An email address is required.</small>
                </div>
                <div class="message-field">
                    <label>Textarea Label
                        <textarea rows="10" name="message" placeholder="Your message to us"></textarea>
                    </label>
                </div>
                <button type="submit">Submit</button>
            </form>
		</div>
	</div>
</section>


<!--Footer-->
<footer>

</footer>
<!--Footer end-->